<div class="login-background"></div>
<div class="login">
    {{!-- Page Header --}}
    <h4>Patient Login</h4>
    {{!-- Login Box --}}
    <div class="loginContainer">
        <form action="normal-login" method="post">
            <p for="email">Email Address:</p>
            <input type="email" id="emails" name="email" placeholder="123@xxx.com">
            <p for="password">Password:</p>
            <input type="password" id="pass" name="password" placeholder="at least 8 characters">
            <a class="ForgetPassword" href='/patient/forgetpass'>Forget Password?</a>
            <div class="mid-login">
                <button class="middle-login" onclick="window.location.href=''" type="button">Login</button>
            </div>
        </form>
    </div>

</div>
<div class="shiftRole">
    <a href="/clinician/login">I am not a Patient, I am a Clinician</a>
</div>